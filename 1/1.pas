(*****************************)
program ProjectEulerProblem1;
(*****************************)

(*****************************)
const
    N: LongInt = 1000;
(*****************************)

(*****************************)
var
    i, sum: LongInt;
(*****************************)

(*****************************)
begin
    sum := 0;
    for i := 3 to N do
    begin
        if (i mod 3 = 0) or (i mod 5 = 0) then sum := sum + i;
    end;
    WriteLn(sum);
end.
