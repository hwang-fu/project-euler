{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",               // <-- key: let ts-node run without --esm
        "moduleResolution": "node",
        "esModuleInterop": true,            // allows `import fs from "fs"` style
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["**/*.ts"]
}

